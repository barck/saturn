.horizontal-click [name="vkl"] { display: none; }
.horizontal-click > :not(input):not(label) {
    overflow: hidden;
    height: 0;
    margin: 0;
    padding: 0 .5em;
    border-top-style: none;
    transition: .5s;
    background: rgba(255, 255, 255, 0.1)
}
.horizontal-click > label {
    padding: 5px 20px;
    position: relative;
    z-index: 20;
    display: block;
    cursor: pointer;
    color: #000;
    line-height: 33px;
    font-size: 19px;
    background: #f9c438;
    border-radius: 5px;
    margin-bottom: 3px;
}
.horizontal-click > :checked + label + * {
    overflow: auto;
    height: 310px;
    padding: 10px
}
.horizontal-click > :checked + label {
    background: #ffa000
    cursor: default;
    font-weight 500
}